{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/finntrinci/finntrinci.github.io/main/data/EPI_d2_clustering.json",
    "format": {"type": "json"}
  },
  "title":{"text": ["Continent vs ML Cluster, Country Grouping."],
  "anchor": "start",
  "subtitle":["Source: EPI."],
  "subtitleFontStyle": "italic",
  "subtitleFontSize": 10},


  "hconcat": [
    {
      "title": {"text": "Continent Clustering",
      "fontSize":12,
      "fontStyle":"italic",
      "anchor": "middle"},
      "height": 300,
      "width": 300,
      "mark": {"type": "point", "filled": true},
      "selection": {
        "hovering": {"type": "point", "on": "mouseover", "nearest": false},
        "toggle": {"type": "multi", "fields": ["continent"], "bind": "legend"}
      },
      "encoding": {
        "x": {"field": "dim1", "type": "quantitative", "title": null},
        "y": {"field": "dim2", "type": "quantitative", "title": null},
        "color": {
          "field": "continent",
          "type": "nominal",
          "scale": {
            "range": [
              "#CD6A6A",
          "#D067BD",
          "#8F77C0",
          "#7DBA94",
          "#6A92CD",
          "#D7AF60"
            ]
          },
          "legend": {"orient": "left", "title": "Continent"}
        },
        "opacity": {
          "condition": {"selection": "toggle", "value": 1},
          "value": 0
        },
        "size": {
          "condition": {"selection": "hovering", "value": 75},
          "value": 30
        },
        "tooltip": [
          {"field": "country", "title": "Country"},
          {"field": "continent", "title": "Continent"}
        ]
      }
    },
    {
      "title": {"text": "KMeans Clustering",
      "fontSize":12,
      "fontStyle":"italic",
      "anchor": "middle"},

      "height": 300,
      "width": 300,
      "mark": {"type": "point", "filled": true, "opacity": 0.7},
      "selection": {
        "hovering2": {"type": "point", "on": "mouseover", "nearest": false},
        "toggle2": {"type": "multi", "fields": ["cluster"], "bind": "legend"}
      },
      "encoding": {
        "x": {"field": "dim1", "type": "quantitative", "title": null},
        "y": {"field": "dim2", "type": "quantitative", "title": null},
        "color": {
          "field": "cluster",
          "type": "nominal",
          "scale": {
            "range": [
              "#CD6A6A",
          "#D067BD",
          "#8F77C0",
          "#7DBA94",
          "#6A92CD",
          "#D7AF60"
            ]
          },
          "legend": {"orient": "right", "title": "Cluster"}
        },
        "opacity": {
          "condition": {"selection": "toggle2", "value": 1},
          "value": 0
        },
        "size": {
          "condition": {"selection": "hovering2", "value": 75},
          "value": 30
        },
        "tooltip": [
          {"field": "country", "title": "Country"},
          {"field": "cluster", "title": "Cluster Number"}
        ]
      }
    }
  ],
  "resolve": {"scale": {"color": "independent"}}
}