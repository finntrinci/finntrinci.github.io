{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A violin plot example showing distributions for pengiun body mass.",
  "width": 275,
  "height": 300,
  "padding": 5,

  "title": {
  "text": "Natural Disaster Frequency by Cluster",
  "subtitle":["A Violin plot showing the distribution of disaster frequency", "within each cluster.   Source: ReliefWeb and EPI."],
  "fontSize":14,
  "subtitleFontStyle":"italic",
  "subtitleFontSize":10,
  "anchor": "start",
  "color": "black"
},

  "config": {
    "axisBand": {
      "bandPosition": 1,
      "tickExtra": true,
      "tickOffset": 0
    }
  },

  "signals": [
    { "name": "plotWidth", "value": 80 },
    { "name": "height", "update": "(plotWidth + 10) * 4"}
  ],

  "data": [
    {
      "name": "penguins",
      "url": "https://raw.githubusercontent.com/finntrinci/finntrinci.github.io/main/data/dis_cluster_notype.json"
    },
    {
      "name": "density",
      "source": "penguins",
      "transform": [
        {
          "type": "kde",
          "field": "Count",
          "groupby": ["cluster"],
          "bandwidth": 0
        }
      ]
    },
    {
      "name": "stats",
      "source": "penguins",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["cluster"],
          "fields": ["Count", "Count", "Count"],
          "ops": ["q1", "median", "q3"],
          "as": ["q1", "median", "q3"]
        }
      ]
    }
  ],

  "scales": [
    {
      "name": "layout",
      "type": "band",
      "range": "height",
      "domain": {"data": "penguins", "field": "cluster", "sort":true}
    },
    {
      "name": "xscale",
      "type": "linear",
      "range": "width", "round": true,
      "domain": {"data": "penguins", "field": "Count"},
      "domainMax":16,
      "zero": false, "nice": true
    },
    {
      "name": "hscale",
      "type": "linear",
      "range": [0, {"signal": "plotWidth"}],
      "domain": {"data": "density", "field": "density", "sort":true}
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "penguins", "field": "cluster", "sort":true},
        "range": ["#CD6A6A",
          "#D067BD",
          "#8F77C0",
          "#7DBA94",
          "#6A92CD",
          "#D7AF60"]
    }
  ],

  "axes": [
    {"orient": "top", "scale": "xscale", "zindex": 1},
    {"orient": "bottom", "scale": "xscale", "zindex": 1, "title":"Disasters per Year"},
    {"orient": "left", "scale": "layout", "tickCount": 5, "zindex": 1, "grid": true, "title":"Cluster"}
  ],

  "marks": [
    {
      "type": "group",
      "from": {
        "facet": {
          "data": "density",
          "name": "violin",
          "groupby": "cluster"
        }
      },

      "encode": {
        "enter": {
          "yc": {"scale": "layout", "field": "cluster", "band": 0.5},
          "height": {"signal": "plotWidth"},
          "width": {"signal": "width"}
        }
      },

      "data": [
        {
          "name": "summary",
          "source": "stats",
          "transform": [
            {
              "type": "filter",
              "expr": "datum.cluster === parent.cluster"
            }
          ]
        }
      ],

      "marks": [
        {
          "type": "area",
          "from": {"data": "violin"},
          "encode": {
            "enter": {
              "fill": {"scale": "color", "field": {"parent": "cluster"}}
            },
            "update": {
              "x": {"scale": "xscale", "field": "value"},
              "yc": {"signal": "plotWidth / 2"},
              "height": {"scale": "hscale", "field": "density"}
            }
          }
        },
        {
          "type": "rect",
          "from": {"data": "summary"},
          "encode": {
            "enter": {
              "fill": {"value": "black"},
              "height": {"value": 2}
            },
            "update": {
              "x": {"scale": "xscale", "field": "q1"},
              "x2": {"scale": "xscale", "field": "q3"},
              "yc": {"signal": "plotWidth / 2"}
            }
          }
        },
        {
          "type": "rect",
          "from": {"data": "summary"},
          "encode": {
            "enter": {
              "fill": {"value": "black"},
              "width": {"value": 2},
              "height": {"value": 8}
            },
            "update": {
              "x": {"scale": "xscale", "field": "median"},
              "yc": {"signal": "plotWidth / 2"}
            }
          }
        }
      ]
    }
  ]
}